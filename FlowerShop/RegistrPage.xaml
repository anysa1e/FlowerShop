<Page x:Class="FlowerShop.RegistrPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlowerShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrPage">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <TextBlock Text="Логин" Foreground="Gray"/>
            <TextBox x:Name="UsernameTextBox" />
        </StackPanel>
        <StackPanel>
            <TextBlock Text="Email" Foreground="Gray"/>
            <TextBox x:Name="EmailTextBox" />
        </StackPanel>
        <StackPanel>
            <TextBlock Text="Пароль" Foreground="Gray"/>
            <PasswordBox x:Name="PasswordBox" />
        </StackPanel>
        <StackPanel>
            <TextBlock Text="Повторите пароль" Foreground="Gray"/>
            <PasswordBox x:Name="ConfirmPasswordBox" />
        </StackPanel>
        <Button Content="Регистрация" Click="RegisterButton_Click"/>
    </StackPanel>
</Page>
